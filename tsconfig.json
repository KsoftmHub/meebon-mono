{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "shared": [
        "packages/shared/src"
      ],
      "apps/*": [
        "apps/*"
      ],
      "packages/*": [
        "packages/*"
      ]
    },
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "apps/api-gateway"
    },
    {
      "path": "apps/notification-service"
    },
    {
      "path": "packages/cli"
    },
    {
      "path": "packages/shared"
    }
  ],
  "include": [
    "main.ts",
    "apps/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/**/dist",
    "apps/**/dist"
  ]
}
