{
  "name": "monorepo-template",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "turbo": "turbo",
    "tsc": "tsc",
    "ts-node": "ts-node",
    "build:turbo": "turbo build",
    "build": "ts-node --project tsconfig.json ./scripts/build.ts",
    "start": "node ./dist/main.js",
    "dev": "pnpm build & ts-node --project tsconfig.json main.ts",
    "dev:p": "turbo dev --parallel",
    "lint": "turbo lint",
    "test": "turbo test",
    "docker:kafka:up": "docker compose up -d",
    "docker:kafka:down": "docker compose down",
    "cli": "pnpm --filter cli build && node packages/cli/dist/index.js"
  },
  "devDependencies": {
    "@types/node": "latest",
    "esbuild": "^0.25.5",
    "ts-node": "latest",
    "turbo": "latest",
    "typescript": "latest"
  },
  "pnpm": {
    "overrides": {}
  }
}
